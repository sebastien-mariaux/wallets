<div class="hidden flash alert alert-success " role="alert" id='flash'>

</div>


<% flash.each do |type, message| %>
  <% mapped_type = type == 'notice' ? 'success' : 'warning' %>
  <div class="event-notice alert alert-<%= mapped_type %> alert-dismissible fade show" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>