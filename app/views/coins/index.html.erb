<h1><%= t('.title').capitalize %></h1>

<table class='table table-sm'>
  <thead>
    <tr>
      <th scope='col'>Crypto</th>
      <th scope='col'>Prix de marché (USD)</th>
      <th scope='col'>Prix de référence (USD)</th>
      <th scope='col'>Masquer</th>
      <th scope='col'></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.display_name %> </td>
        <td><%= coin.market_value('usd') %> </td>
        <%= render 'reference_price_td', coin: coin %>
        <td>
          <% if coin.hide %>
            <i class="fas fa-check"></i>
          <% end %>
        </td>
        <td class='text-end'>
          <%= icon_link_to('Transactions', "fas fa-exchange-alt", coin_transactions_path(coin)) %>
          <%= icon_link_to('Modifier', "far fa-edit",  edit_coin_path(coin)) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new_coin'), new_coin_path, class: 'btn btn-info' %>