<h1><%= t '.title' %></h1>

<table class='table table-sm'>
  <thead>
    <tr>
      <th scope='col'><%= Wallet.human_attribute_name(:name) %></th>
      <th scope='col'><%= Wallet.human_attribute_name(:description) %></th>
      <th scope='col'></th>
    </tr>
  </thead>
  <tbody>
    <% @wallets.each do |wallet| %>
      <tr>
        <td><%= wallet.name %></td>
        <td><%= wallet.description %></td>
        <td class='text-end'>
          <%= icon_link_to('Modifier', "far fa-edit",  edit_wallet_path(wallet)) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to t('.new'), new_wallet_path, class: 'btn btn-info' %>